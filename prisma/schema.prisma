generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Job {
  id          String   @id @default(uuid())
  title       String
  company     String
  location    String
  type        String   // Full-time, Part-time, Contract, Remote
  category    String   // Engineering, Design, Marketing, etc.
  description String?
  url         String   @unique
  salary      String?
  tags        String?  // JSON string array
  source      String   // web3.career, wellfound, etc.
  region      String   // Global or Korea
  postedDate  DateTime?
  crawledAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isActive      Boolean   @default(true)
  status        String    @default("active")
  lastValidated DateTime?

  // User-posted job fields
  postedBy      String?  // Wallet address of poster
  reportCount   Int      @default(0)
  isHidden      Boolean  @default(false)

  @@index([company])
  @@index([source])
  @@index([region])
  @@index([isActive])
  @@index([postedDate])
  @@index([postedBy])
}

model JobReport {
  id          String   @id @default(uuid())
  jobId       String
  reporterWallet String?
  reporterIp  String?
  reason      String
  createdAt   DateTime @default(now())

  @@index([jobId])
  @@index([reporterWallet])
}

model WalletBlacklist {
  id          String   @id @default(uuid())
  wallet      String   @unique
  reason      String?
  createdAt   DateTime @default(now())

  @@index([wallet])
}

model CrawlLog {
  id        String   @id @default(uuid())
  source    String
  status    String   // success, failed
  jobCount  Int      @default(0)
  error     String?
  createdAt DateTime @default(now())

  @@index([source])
  @@index([createdAt])
}
